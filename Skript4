visualisierung <- function(a, b, c, d){
  par(mfrow= c(2,2))
  
  hilfe_vis(a,main="StudienfÃ¤cher",ylab="abs.Haeufigkeit",col="blue")
  hilfe_vis(b,main="Alter", ylab="abs. Haeufigkeit" )
  hilfe_vis(c, main="Interesse_Mathe", xlab="Interesse-->",ylab="abs. Haeufigkeit")
  hilfe_vis(d, main="Interesse_Info", xlab="Interesse-->", ylab="abs. Haeufigkeit")
  
}
